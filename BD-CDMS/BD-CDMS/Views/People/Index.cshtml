@model IEnumerable<BD_CDMS.Models.Person>

@{
    ViewBag.Title = "Index";
}
<div style="position: relative; margin-bottom: 100px;">
    <div style="">
        <h2 style="position: absolute; left: 0; top: 0; margin-bottom: 50px" class="title">Clients</h2>

        @{
            if (System.Web.HttpContext.Current.User.IsInRole("Admin") || System.Web.HttpContext.Current.User.IsInRole("Manager"))
            {
                <div style="position: absolute; right: 0; margin-bottom: 40px; margin-top: 20px; padding: 5px; text-align: right">
                            <p>
                                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
                            </p>
                </div>
            }
        }
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Name)*@
            First Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @{
                    if (System.Web.HttpContext.Current.User.IsInRole("Admin") || System.Web.HttpContext.Current.User.IsInRole("Seller"))
                    {

                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-warning btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm" })

                    }
                }

                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info btn-sm" })

            </td>
        </tr>
    }

</table>
