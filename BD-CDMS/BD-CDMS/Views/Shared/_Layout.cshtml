<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Car System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="font-size:12px">
                <ul class="nav navbar-nav">

                    @{
                        if (System.Web.HttpContext.Current.User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Salon", "Index", "DealershipSalon")</li>
                            <li>@Html.ActionLink("People", "Index", "People")</li>
                            <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                            <li>@Html.ActionLink("Feature", "Index", "Features")</li>
                            <li>@Html.ActionLink("Issues", "Index", "Issues")</li>
                            <li>@Html.ActionLink("In Progress", "IndexServiceman", "Issues")</li>
                            <li>@Html.ActionLink("Issues History", "IndexHistory", "Issues")</li>
                            <li>@Html.ActionLink("Admin Issues", "IndexAdmin", "Issues")</li>
                            <li>@Html.ActionLink("Add Issues", "Create", "Issues")</li>
                            <li>@Html.ActionLink("Charts", "Index", "Charts")</li>

                        }
                        if (System.Web.HttpContext.Current.User.IsInRole("Seller"))
                        {
                            <li>@Html.ActionLink("Salon", "Index", "DealershipSalon")</li>
                            <li>@Html.ActionLink("People", "Index", "People")</li>
                            <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                            <li>@Html.ActionLink("Feature", "Index", "Features")</li>
                            <li>@Html.ActionLink("Add Issues", "Create", "Issues")</li>

                        }
                        if (System.Web.HttpContext.Current.User.IsInRole("Serviceman"))
                        {
                            <li>@Html.ActionLink("Salon", "Index", "DealershipSalon")</li>
                            <li>@Html.ActionLink("Feature", "Index", "Features")</li>
                            <li>@Html.ActionLink("Issues", "Index", "Issues")</li>
                            <li>@Html.ActionLink("In Progress", "IndexServiceman", "Issues")</li>
                            <li>@Html.ActionLink("Issues History", "IndexHistory", "Issues")</li>
                            <li>@Html.ActionLink("Add Issues", "Create", "Issues")</li>
                        }
                        if (System.Web.HttpContext.Current.User.IsInRole("Manager"))
                        {
                            <li>@Html.ActionLink("Salon", "Index", "DealershipSalon")</li>
                            <li>@Html.ActionLink("People", "Index", "People")</li>
                            <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                            <li>@Html.ActionLink("Feature", "Index", "Features")</li>
                            <li>@Html.ActionLink("Issues", "Index", "Issues")</li>
                            <li>@Html.ActionLink("Issues History", "IndexHistory", "Issues")</li>
                            <li>@Html.ActionLink("Add Issues", "Create", "Issues")</li>
                            <li>@Html.ActionLink("Charts", "Index", "Charts")</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="text-align: center;">
            <p>&copy; @DateTime.Now.Year Wysoka Rada Mihauf</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>
    <script src="~/Scripts/jquery.filedrop.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
